{
  "name": "Zen Mode",
  "description": "Injects a button after the tab bar that allows you to hide the stage to maximise code area.",
  "credits": [
    {
      "name": "TheChorister",
      "link": "https://scratch.mit.edu/users/TheChorister"
    }
  ],
  "tags": ["editor"],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["projects"]
    }
  ],
  "settings": [
    {
      "id": "hideStage",
      "type": "boolean",
      "name": "Hide Stage",
      "default": true
    },
    {
      "id": "hideSpritePane",
      "type": "boolean",
      "name": "Hide Sprite Pane",
      "default": true,
      "if": {
        "settings": { "hideStage": true }
      }
    },
    {
      "id": "hideSpriteInfoPane",
      "type": "boolean",
      "name": "Hide Sprite Information Pane",
      "default": true,
      "if": {
        "settings": { "hideStage": true, "hideSpritePane": false }
      }
    },
    {
      "id": "customSpriteSelector",
      "name": "Custom Sprite Picker Width",
      "type": "boolean",
      "default": true,
      "if": {
        "settings": {
          "hideStage": true,
          "hideSpritePane": false,
          "hideSpriteInfoPane": true
        }
      }
    },
    {
      "id": "spriteSelectorWidth",
      "name": "Sprite Picker Width",
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 1,
      "if": {
        "settings": {
          "hideStage": true,
          "hideSpritePane": false,
          "hideSpriteInfoPane": true,
          "customSpriteSelector": true
        }
      }
    },
    {
      "id": "hideNavigationBar",
      "type": "boolean",
      "name": "Hide Navigation Bar",
      "default": false
    },
    {
      "id": "hideBackpack",
      "type": "boolean",
      "name": "Hide Backpack",
      "default": false
    },
    {
      "id": "fullscreen",
      "type": "boolean",
      "name": "Fullscreen",
      "default": true
    }
  ],
  "versionAdded": "1.24.0"
}
