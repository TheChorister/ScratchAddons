{
  "name": "Zen Mode",
  "description": "Allows you to hide the stage to maximise code area when Ctrl-K-Z is pressed.",
  "info": [
    {
      "id": "macos-key",
      "text": "On MacOS use the Cmd key.",
      "type": "notice"
    }
  ],
  "credits": [
    {
      "name": "TheChorister",
      "link": "https://scratch.mit.edu/users/TheChorister"
    }
  ],
  "tags": ["editor"],
  "userscripts": [
    {
      "url": "userscript.js",
      "matches": ["projects"]
    }
  ],
  "userstyles": [
    {
      "url": "style.css",
      "matches": ["projects"]
    }
  ],
  "settings": [
    {
      "id": "hideStage",
      "type": "boolean",
      "name": "Hide Stage",
      "default": true
    },
    {
      "id": "hideSpritePane",
      "type": "boolean",
      "name": "Hide Sprite Pane",
      "default": true,
      "if": {
        "settings": { "hideStage": true }
      }
    },
    {
      "id": "hideNavigationBar",
      "type": "boolean",
      "name": "Hide Navigation Bar",
      "default": false
    },
    {
      "id": "hideBackpack",
      "type": "boolean",
      "name": "Hide Backpack",
      "default": false
    },
    {
      "id": "fullscreen",
      "type": "boolean",
      "name": "Fullscreen",
      "default": true
    }
  ]
}
